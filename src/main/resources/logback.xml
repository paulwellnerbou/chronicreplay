<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%level] [%thread] [%logger] {%msg%n}</pattern>
		</encoder>
	</appender>
	
	<appender name="logfile" class="ch.qos.logback.core.FileAppender">
		<file>chronicreplay.log</file>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%level] [%thread] [%logger] {%msg%n}</pattern>
		</encoder>
	</appender>
	
	<appender name="rollinglogfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<prudent>true</prudent>
		<fileNamePattern>chronicreplay-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%level] [%thread] [%logger] {%msg%n}</pattern>
		</encoder>
	</appender>

	<root level="info">
		<appender-ref ref="STDOUT"/>
		<appender-ref ref="logfile"/>
	</root>
</configuration>
